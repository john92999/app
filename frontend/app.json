{
  "expo": {
    "name": "OCR Text Extractor",
    "slug": "ocr-text-extractor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "frontend",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "extra": {
      "EXPO_BACKEND_URL": "https://handwrite2text.preview.emergentagent.com",
      "router": {},
      "eas": {
        "projectId": "5e57b337-0bfa-4cc3-89ef-45d63dbb3eb7"
      }
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to capture photos for text extraction.",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to select images for text extraction."
      },
      "bundleIdentifier": "com.anonymous.ocrtextextractor"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.anonymous.ocrtextextractor"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to your photos to extract text from images.",
          "cameraPermission": "This app needs camera access to capture photos for text extraction."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
